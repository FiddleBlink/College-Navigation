<% layout('./layout/boilerplate') %> 
<div id="map"></div>
<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-1 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12  col-lg-7 col-xl-6">
        <div class="card shadow-2-strong h-md-100" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="text-start registerpage">Where do you </h3>
            <h3 class="text-start mb-5 registerpage">want to travel</h3>




            <form action="/route" method="POST">
              <div class="d-flex mb-4">
                <i class="col-1 d-flex align-items-center fa-solid fa-flag"></i>
                <select name="source" id="source" class="flex-grow-1" placeholder="Source" required>
                    <option value="" disabled selected hidden>Choose Source</option>
                    <option value="DR">DR</option>
                    <option value="KS">KS</option>
                    <option value="Main Gate">Main Gate</option>
                    <option value="BasketBall Court">BasketBall court</option>
                </select>
              </div>

              <div class="d-flex  mb-4">
                <i class="col-1 d-flex align-items-center fa-solid fa-flag"></i>
                <select name="destination" id="Destination" class="flex-grow-1" placeholder="Destination" required>
                    <option value="" disabled selected hidden>Choose Destination</option>
                    <option value="DR">DR</option>
                    <option value="KS">KS</option>
                    <option value="Main Gate">Main Gate</option>
                    <option value="BasketBall Court">BasketBall court</option>
                </select>              </div>

              <div class="d-flex  mb-4">
                <i class="col-1 d-flex align-items-center fa-solid fa-envelope"></i>
                <textarea rows="3" cols="10" id="purpose" class="flex-grow-1 form-control" placeholder="Mention your purpose" name="purpose" required/></textarea>
              </div>

              <button class="btn w-100 btn-primary btn-lg btn-block" type="submit">Let's Travel</button>
            </form>




          </div>
        </div>
      </div>
    </div>
  </div>
  </section>
    