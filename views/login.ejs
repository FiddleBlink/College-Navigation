<% layout('./layout/boilerplate') %> 
<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-1 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12  col-lg-7 col-xl-6">
        <div class="card shadow-2-strong h-md-100" style="border-radius: 1rem;">
          <div class="card-body px-5 py-4 text-center">
            <img src="https://mitwpu.edu.in/sites/mitwpu.edu.in/theme/images/icons/android-chrome-192x192.png" alt="">
            <h3 class="mb-4 loginpage">Campus Navigation System</h3>
            
            <form action="/login" method="post">
              <div class="d-flex mb-4">
                <i class="col-1 d-flex align-items-center fa-solid fa-envelope"></i>
                <input type="email" id="typeEmailX-2" class="flex-grow-1 form-control" placeholder="Email" name="email"/>
                </div>
          
                <div class="d-flex mb-4">
                <i class="col-1 d-flex align-items-center fa-solid fa-lock"></i>
                <input type="password" id="typePasswordX-2" class="flex-grow-1 form-control" placeholder="Password" name="password"/>
                </div>
    
                <button class="btn w-100 btn-primary btn-lg btn-block mb-5" type="submit">Login</button>
            </form>

            
            
            <div class="noAcc text-muted d-flex justify-content-center">
              Don't have an account? <a class="px-2" href="/register">Sign Up</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </section>
    