<% layout('./layout/boilerplate') %> 
<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-1 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12  col-lg-7 col-xl-6">
        <div class="card shadow-2-strong h-md-100" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="text-start registerpage">Tell Us About</h3>
            <h3 class="text-start mb-5 registerpage">Yourself</h3>




            <form action="/register" class="was-validated" method="post">
              <div class="d-flex mb-4">
                <i class="col-1 d-flex align-items-center fa-solid fa-user"></i>
                <input type="text" id="FullName" class="flex-grow-1 form-control" placeholder="FullName" name="username" required/>
              </div>

              <div class="d-flex  mb-4">
                <i class="col-1 d-flex align-items-center fa-solid fa-lock"></i>
                <input type="password" id="Pass" class="flex-grow-1 form-control" placeholder="Password" name="password" required/>
              </div>

              <div class="d-flex  mb-4">
                <i class="col-1 d-flex align-items-center fa-solid fa-envelope"></i>
                <input type="email" id="Email" class="flex-grow-1 form-control" placeholder="Email" name="email" required/>
              </div>
        
              <div class="d-flex  mb-5">
                <i class="col-1 d-flex align-items-center fa-solid fa-phone"></i>
                <input type="number" id="Num" class="flex-grow-1 form-control" placeholder="Phone Number" name="phoneNumber" required/>
              </div>

              <button class="btn w-100 btn-primary btn-lg btn-block" type="submit">Register</button>
            </form>




          </div>
        </div>
      </div>
    </div>
  </div>
</section>